<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android">
            <gradient
                android:startColor="@color/GoldfishPressed"
                android:centerColor="@color/DarkGoldfishPressed"
                android:endColor="@color/GoldfishPressed"
                android:angle="90"/>
            <corners android:bottomLeftRadius="8dp"
                android:bottomRightRadius="8dp"
                android:topLeftRadius="8dp"
                android:topRightRadius="8dp"/>
        </shape>
    </item>
    <item android:state_pressed="false">
        <shape xmlns:android="http://schemas.android.com/apk/res/android">
            <gradient
                android:startColor="@color/DarkGoldfish"
                android:centerColor="@color/Goldfish"
                android:endColor="@color/DarkGoldfish"
                android:angle="90"/>
            <corners android:bottomLeftRadius="8dp"
                android:bottomRightRadius="8dp"
                android:topLeftRadius="8dp"
                android:topRightRadius="8dp"/>
        </shape>
    </item>

</selector>
